@{
    ViewBag.Title = "2.P!";
}
@if (Request.IsAuthenticated)
{

    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <img src="~/images/Verre.png" class="img-responsive" alt="2.PI" width="400" height="400" />
            </div>
            <div class="col-sm-8">
                <h1>Verre - Vidros Inteligentes</h1>
                <h2>Prático e Fácil</h2>
                <h3>Tenha o controle total da sua equipe comercial</h3>
                <div>
                    <p>
                        Toda a telefonia da sua empresa será através do Verre.
                    </p>
                </div>
                <p>
                    Saiba se seu vendedor está ligando para os seus clientes!
                    <hr />
                    
                    @Html.ActionLink("Comece a usar!!^^", "Register", "Account", null, new { @class = "btn btn-danger" })
                </p>
            </div>
        </div>
    </div>



}
        @if (Request.IsAuthenticated == false)
        {
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <img src="~/images/Caneca4.jpg" class="img-responsive" alt="2.PI" width="400" height="400" />
                    </div>
                    <div class="col-sm-8">
                        <h1>Qual é o seu problema?</h1>
                        <h2>Nós temos a solução que você está procurando</h2>
                        <h3>2.P! é uma plataforma de soluções na nuvem desenvolvida em .NET</h3>
                        <p>
                            @Html.ActionLink("Veja as nossas Soluções", "Solution", "Home", null, new { @class = "btn btn-danger" })
                        </p>
                        <div id="fb-root"></div>
                        <div class="fb-like"
                             data-share="true"
                             data-width="450"
                             data-show-faces="true">
                        </div>
                    </div>
                </div>

                
            </div>
        }
